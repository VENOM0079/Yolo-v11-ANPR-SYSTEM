# RTSP Stream Configuration
RTSP_URL=rtsp://admin:password@192.168.1.100:554/stream1
RTSP_BACKUP_URL=rtsp://admin:password@192.168.1.100:554/stream2

# PTZ Camera Configuration
PTZ_ONVIF_HOST=192.168.1.100
PTZ_ONVIF_PORT=80
PTZ_USERNAME=admin
PTZ_PASSWORD=password
PTZ_USE_DIGEST_AUTH=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ptz_camera
POSTGRES_USER=ptz_user
POSTGRES_PASSWORD=changeme

# MinIO/S3 Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ptz-media
MINIO_SECURE=false

# YOLOv11 Model Configuration
YOLO_MODEL_PATH=/app/models/yolov11n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_DEVICE=0  # 0 for GPU, cpu for CPU

# Tracking Configuration
TRACKER_TYPE=bytetrack
TRACKER_MAX_AGE=30
TRACKER_MIN_HITS=3
TRACKER_IOU_THRESHOLD=0.3

# ANPR Configuration
ANPR_ENGINE=easyocr
ANPR_LANGUAGES=en
ANPR_MIN_CONFIDENCE=0.6
ANPR_MIN_PLATE_HEIGHT=150

# PTZ Control Parameters
PTZ_MOVE_RATE_LIMIT_MS=2000
PTZ_HYSTERESIS_PIXELS=50
PTZ_DEFAULT_PRESET=1
PTZ_ZOOM_STEP=0.1
PTZ_PAN_SPEED=0.5
PTZ_TILT_SPEED=0.5

# Storage & Retention
MEDIA_RETENTION_DAYS=30
EVENT_RETENTION_DAYS=90
CLEANUP_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# UI Service
UI_PORT=8080
UI_HOST=0.0.0.0
